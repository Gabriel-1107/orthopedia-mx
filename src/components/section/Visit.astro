---
import Container from "./Container.astro"
---
<Container>
<section class="principal-container flex flex-col items-center gap-8 p-8 md:pt-12 section" id="visitanos">
    <iframe
        data-aos="flip-left"
        style="border-radius: 20px;"
        width="100%"
        height="400"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3741.9807548620183!2d-103.26229152524944!3d20.301063712375093!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x842f40b173943769%3A0x4ebabf04ddcd7fcf!2sHospital%20Ajijic!5e0!3m2!1ses!2smx!4v1739903135789!5m2!1ses!2smx"
        style="border: 0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
    <div class="p-6 info-container text-center">
        <div class="data-element flex justify-center items-center mb-4">
          <img src="/img/screens/ubicacion.png" alt="icon" style="width: 50px; height: 50px;">
          <p class="my-auto mx-1 text-muted-500 dark:text-muted-300">Carretera Ote. 33-A, Centro, 45920 Chapala, Jal.</p>
        </div>
        <div class="data-element flex justify-center items-center">
          <img src="/img/screens/reloj.png" alt="icon" style="width: 50px; height: 50px;">
          <ul class="my-auto mx-1 text-muted-500 dark:text-muted-300">
            <li data-translate="HORA_1">Servicio las 24 Horas.</li>
          </ul>
        </div>
      </div>
      
    <div id="contacto"></div>
</section>
</Container>
<style>
    section {
        padding: 50px 5vw;
    }

    h2 {
        text-align: center;
    }

    .data-element {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
    }

    .info-container {
        text-align: center;
    }

    .icon1, .icon2 {
        margin-right: 8px;
    }

    iframe {
        max-width: 800px;
        width: 100%;
        height: 400px;
        border-radius: 20px;
    }

    @media only screen and (max-width: 1024px) {
        section {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        iframe {
            max-width: 100%;
            height: 300px;
        }

        .info-container {
            padding: 10px 20px;
        }

        .data-element {
            margin: 15px auto;
        }
    }
</style>
